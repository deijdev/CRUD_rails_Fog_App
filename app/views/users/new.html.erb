<div id="user_login">
    <div class="new_user">
        <h1> Create a User </h1>

        <%= render partial: "shared/error_list", locals: {new_object: @user}%>

        <%= form_for @user do |f| %>
            <%= f.label :name %><br>
            <%= f.text_field :name %><br>
            <%= f.label :email %><br>
            <%= f.text_field :email %><br>
            <%= f.label "Enter Password" %><br>
            <%= f.password_field :password, placeholder:"password" %><br>
            <%= f.label "Confirm Password" %><br>
            <%= f.password_field :password_confirmation, placeholder:"password" %><br>
            <%= f.submit "Join FOG" %>
        <% end %>
    </div>


    <div class="log_in">
            <h1>Log In</h1>
            <%= form_for @user, url: login_path, method: :post do |f|  %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.submit "log in" %>
            <% end %>

        <div class="errors">
            <% if flash[:login_errors] %>
                <% flash[:login_errors].each do |error| %>
                    <p><%= error %></p>
                <% end %>
            <% end %>
        </div>
    </div>


</div>