<!DOCTYPE html>
<html>
  <head>
    <title>Fog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body style="height: 100%">
    <div id="nav">
      <div id="nav_logo">
        <a href="/"><%= image_tag 'fog_logo.png' %></a><div style="float: right; padding-top: 8px; font-size: 30px;">FOG GAMES</div>
      </div>
      <div id="nav_links">
        <%= link_to "HOME", home_path %> | 
        <%= link_to "All Users", users_path %> | 
        <%= link_to "All Games", games_path %> |
        <% if @current && @current.admin%> 
          <%= link_to "Add Game", new_game_path %> |
        <% end %> 
        <%= link_to "Join FOG", new_user_path %>
        <% if @current %> | 
          <%= link_to "Log Out", logout_path, :method => :post %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
